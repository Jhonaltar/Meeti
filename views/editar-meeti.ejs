                  </ul>
                  <!-- End List -->
                  <div class="d-lg-none">
                    <div class="dropdown-divider"></div>
                  </div>
                  <!-- End Nav -->
                </div>
              </div>
              <!-- End Card -->
            </div>
          </div>
          <!-- End Navbar -->
        </div>
  
        <div class="col-lg-9">
          <!-- Card -->
          <div class="card">
            <!-- Header -->
            <div class="card-header">
              <h5 class="card-title">Formulario para editar Meeti</h5>
            </div>
            <!-- End Header -->
            <% if(locals.mensajes) { %>
              <% const categoria=Object.keys(locals.mensajes) %>
                <% if (categoria.length) { %>
                  <% locals.mensajes[categoria].forEach(alerta=>{ %>
                    <div class="alert alert-soft-<%- categoria %> text-center rounded-0 mb-0" role="alert">
                      <strong>
                        <%= alerta %>
                      </strong>
                    </div>
                    <% }) %>
                      <% } %>
                        <% } %>
  
                          <!-- Body -->
                          <div class="card-body">
                            <!-- Nav -->
                            <!-- End Nav -->
                            <!-- Tab Content -->
                            <div class="tab-content" id="editUserTabContent">
  
  
                              <!-- /////////////////////////// FORMULARIO PARA NUEVO MEETIS//////////////////////////////////////// -->
                              <form action="/editar-meeti/<%= meeti.id %>" method="POST">
                                <!-- Form Group -->
                                <div class="row form-group">
                                  <label for="locationLabel1" class="col-sm-3 col-form-label input-label">Grupos</label>

                                  <div class="col-sm-9">
                                    <!-- Select -->
                                    <div class="mb-3">
                                      <select class="js-custom-select custom-select dropdown-toggle" id="locationLabel1"
                                        data-hs-select2-options='{
                      "customClass": "custom-select",
                      "searchInputPlaceholder": "Buscar por Meeti"
                    }' name="grupoId">
                                        <option value="" selected disabled>-- Elige un Grupo --</option>
                                        <% if (grupos.length> 0) { %>

                                          <% grupos.forEach(grupo=> { %>
                                            <option <%= (meeti.grupoId === grupo.id) ? 'selected' : ''%>  value="<%= grupo.id %>"
                                              data-option-template='<span class="d-flex align-items-center"><span class="avatar avatar-xs avatar-soft-dark avatar-circle mr-2"></span><span><%= grupo.nombre %></span></span>'>
                                              <%= grupo.nombre %>
                                            </option>
                                            <% }) %>

                                              <% } %>
                                      </select>
                                    </div>
                                    <!-- End Select -->
                                  </div>

                                 
                                </div>
                                <!-- End Form Group -->
                                <!-- Form Group -->
                                <div class="row form-group">
                                  <label for="firstNameLabel" class="col-sm-3 col-form-label input-label">Titulo <i
                                      class="far fa-question-circle text-body ml-1" data-toggle="tooltip"
                                      data-placement="top"
                                      title="Al crear el meeti se publicara en Meeti home."></i></label>

                                  <div class="col-sm-9">
                                    <div class="input-group">
                                      <input type="text" class="form-control" name="titulo" id="firstNameLabel"
                                        placeholder="Titulo del meeti" value="<%= meeti.titulo %>">
                                    </div>
                                  </div>
                                </div>
                                <!-- End Form Group -->
                                <!-- Form Group -->
                                <div class="row form-group">
                                  <label for="firstNameLabel" class="col-sm-3 col-form-label input-label">Invitado
                                  </label>

                                  <div class="col-sm-9">
                                    <div class="input-group">
                                      <input type="text" class="form-control" name="invitado" id="firstNameLabel"
                                        placeholder="Nombre Invitado o Ponente (si aplica)" value="<%= meeti.invitado %>">
                                    </div>
                                  </div>
                                </div>
                                <!-- End Form Group -->
                                <!-- Form Group -->
                                <div class="row form-group">
                                  <label for="firstNameLabel" class="col-sm-3 col-form-label input-label">Tiempo: <i
                                      class="far fa-question-circle text-body ml-1" data-toggle="tooltip"
                                      data-placement="top" title="Debe colocar la fecha y hora."></i></label>

                                  <div class="col-sm-9">
                                    <div class="input-group">
                                      <input type="date" class="form-control" name="fecha" placeholder="Fecha Meeti" value="<%= meeti.fecha %>">
                                      <input type="time" class="form-control" name="hora" placeholder="Hora Meeti" value="<%= meeti.hora %>">
                                      <%= JSON.stringify(meeti.fecha) %>
                                    </div>
                                  </div>
                                </div>
                                <!-- End Form Group -->
                                <!-- Form Group -->
                                <div class="row form-group">
                                  <label for="firstNameLabel" class="col-sm-3 col-form-label input-label">Cupo </label>

                                  <div class="col-sm-9">
                                    <div class="input-group">
                                      <input type="text" class="form-control" name="cupo" id="firstNameLabel"
                                      value="<%= meeti.cupo %>" placeholder="Cupo Meeti (si aplica)">
                                    </div>
                                  </div>
                                </div>
                                <!-- End Form Group -->
                                <!-- Form Group -->
                                <div class="row form-group">
                                  <label class="col-sm-3 col-form-label input-label">Descripcion</label>

                                  <div class="col-sm-9">
                                    <!-- Quill -->
                                    <div class="quill-custom">
                                      <input type="hidden" id="x" name="descripcion" value="<%= meeti.descripcion %>">
                                      <trix-editor input="x" style="min-height: 10rem!important;"></trix-editor>
                                    </div>
                                    <!-- End Quill -->
                                  </div>
                                </div>
                                <!-- End Form Group -->
                                <div class="text-center">
                                  <span class="divider divider-text">Ubicacion del Meeti</span>
                                </div>
                                <br>
                                <div class="row form-group">
                                  <label for="locationLabel" class="col-sm-3 col-form-label input-label">Coloca la
                                    direccion</label>

                                  <div class="col-sm-9">
                                    <input type="text" id="formbuscador" class="form-control" placeholder="Ubicacion">
                                    <p class="text-info">El asistente colocar√° una direcci√≥n estimada.</p>
                                  </div>
                                </div>

                                <!-- Mapa -->
                                <div id="map" class="min-h-450rem rounded" style="height: 400px; "></div>
                                <div class="shadow-primary-lg bg-primary text-white p-3 mb-5 rounded"
                                  style="text-align: center;"><i class="fas fa-map-marked-alt"></i>
                                  Mueve el Pin hacia el punto exacto en caso de ser necesario.</div>
                                <!-- End Mapa -->

                                <div class="alert alert-soft-primary" role="alert" style="text-align: center;">
                                  <i class="fas fa-info-circle mt-1 mr-1"></i>
                                  Confirmar que los siguiente campos sean correctos
                                </div>

                                <!-- Accordion -->
                                <div id="shopCartAccordion" class="accordion mb-5">
                                  <!-- Card -->
                                  <div class="card card-bordered shadow-none">
                                    <div class="card-body card-collapse" id="shopCardHeadingOne">
                                      <a class="btn btn-link btn-block card-btn collapsed" href="javascript:;"
                                        role="button" data-toggle="collapse" data-target="#shopCardOne"
                                        aria-expanded="false" aria-controls="shopCardOne">
                                        <span class="row align-items-center">
                                          <span class="col-9">
                                            <span class="media align-items-center">
                                              <span class="w-100 max-w-6rem mr-3">
                                                <img class="img-fluid" src="../assets/svg/icons/icon-8.svg" alt="SVG">
                                              </span>
                                              <span class="media-body">
                                                <span class="d-block font-size-1 font-weight-bold">Ver campos de
                                                  direccion</span>
                                              </span>
                                            </span>
                                          </span>
                                          <span class="col-3 text-right">
                                            <span class="card-btn-toggle">
                                              <span class="card-btn-toggle-default">&plus;</span>
                                              <span class="card-btn-toggle-active">&minus;</span>
                                            </span>
                                          </span>
                                        </span>
                                      </a>
                                    </div>
                                    <div id="shopCardOne" class="collapse" aria-labelledby="shopCardHeadingOne"
                                      data-parent="#shopCartAccordion">
                                      <div class="card-body">
                                        <!-- Form Group -->
                                        <div class="row form-group">
                                          <label for="firstNameLabel"
                                            class="col-sm-3 col-form-label input-label">Direccion </label>

                                          <div class="col-sm-9">
                                            <div class="input-group">
                                              <input type="text" class="form-control" id="direccion" name="direccion"
                                                placeholder="Direccion" readonly="read-only" value="<%= meeti.direccion %>" >
                                            </div>
                                          </div>
                                        </div>
                                        <!-- End Form Group -->

                                        <!-- Form Group -->
                                        <div class="row form-group">
                                          <label for="firstNameLabel" class="col-sm-3 col-form-label input-label">Ciudad
                                          </label>

                                          <div class="col-sm-9">
                                            <div class="input-group">
                                              <input type="text" class="form-control" id="ciudad" name="ciudad"
                                                placeholder="Ciudad" readonly="read-only" value="<%= meeti.ciudad %>">
                                            </div>
                                          </div>
                                        </div>
                                        <!-- End Form Group -->

                                        <!-- Form Group -->
                                        <div class="row form-group">
                                          <label for="firstNameLabel" class="col-sm-3 col-form-label input-label">Estado
                                          </label>

                                          <div class="col-sm-9">
                                            <div class="input-group">
                                              <input type="text" class="form-control" id="estado" name="estado"
                                                placeholder="Estado" readonly="read-only" value="<%= meeti.estado %>">
                                            </div>
                                          </div>
                                        </div>
                                        <!-- End Form Group -->

                                        <!-- Form Group -->
                                        <div class="row form-group">
                                          <label for="firstNameLabel" class="col-sm-3 col-form-label input-label">Pais
                                          </label>

                                          <div class="col-sm-9">
                                            <div class="input-group">
                                              <input type="text" class="form-control" id="pais" name="pais"
                                                placeholder="Pa√≠s" readonly="read-only" value="<%= meeti.pais %>">
                                            </div>
                                          </div>
                                        </div>
                                        <!-- End Form Group -->

                                        <!-- Form Group -->
                                        <div class="row form-group">
                                          <label for="firstNameLabel"
                                            class="col-sm-3 col-form-label input-label">Latitud </label>

                                          <div class="col-sm-9">
                                            <div class="input-group">
                                              <input type="text" class="form-control" id="lat" name="lat"
                                                placeholder="Latitud del lugar" readonly="read-only" value="<%= meeti.ubicacion.coordinates[0]%>"
                                                >
                                            </div>
                                          </div>
                                        </div>
                                        <!-- End Form Group -->

                                        <!-- Form Group -->
                                        <div class="row form-group">
                                          <label for="firstNameLabel"
                                            class="col-sm-3 col-form-label input-label">Longitud </label>

                                          <div class="col-sm-9">
                                            <div class="input-group">
                                              <input type="text" class="form-control" id="lng" name="lng"
                                                placeholder="Longitud del lugar" readonly="read-only" value="<%= meeti.ubicacion.coordinates[1]%>"
                                                >
                                            </div>
                                          </div>
                                        </div>
                                        <!-- End Form Group -->

                                      </div>
                                    </div>
                                  </div>
                                  <!-- End Card -->
                                </div>
                                <!-- End Accordion -->
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                                  <input type="submit" class="btn btn-primary" value="Guardar cambios">
                                </div>
                              </form>
                              <!-- /////////////////////////// FIN FORMULARIO PARA NUEVO MEETIS//////////////////////////////////////// -->
                              
                            
                            </div>
                          </div>
                          <!-- End Tab Content -->
          </div>
          <!-- End Body -->
        </div>
        <!-- End Card -->
      </div>
    </div>
    <!-- End Row -->
    </div>
    <!-- End Content Section -->
  </main>
  <!-- ========== END MAIN ========== -->