<!-- ========== MAIN ========== -->
<main id="content" role="main" class="bg-light" style="top: 50px;">
  <!-- Breadcrumb Section -->
  <div class="bg-dark" style="background-image: url(./assets/svg/components/abstract-shapes-20.svg);">
    <div class="container space-1 space-top-lg-2 space-bottom-lg-3">
      <div class="row align-items-center">
        <div class="col">
          <div class="d-none d-lg-block">
            <h1 class="h2 text-white">
              <%= nombrePagina%>
            </h1>
          </div>

          <!-- Breadcrumb -->
          <ol class="breadcrumb breadcrumb-light breadcrumb-no-gutter mb-0">
            <li class="breadcrumb-item active" aria-current="page">
              <%= tagline%>
            </li>
          </ol>
          <!-- End Breadcrumb -->
        </div>

        <div class="col-auto">
          <div class="d-none d-lg-block">
            <a class="btn btn-sm btn-soft-light" href="#">Cerrar Sesión</a>
          </div>

          <!-- Responsive Toggle Button -->
          <button type="button" class="navbar-toggler btn btn-icon btn-sm rounde-circle d-lg-none"
            aria-label="Toggle navigation" aria-expanded="false" aria-controls="sidebarNav" data-toggle="collapse"
            data-target="#sidebarNav">
            <span class="navbar-toggler-default">
              <svg width="14" height="14" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor"
                  d="M17.4,6.2H0.6C0.3,6.2,0,5.9,0,5.5V4.1c0-0.4,0.3-0.7,0.6-0.7h16.9c0.3,0,0.6,0.3,0.6,0.7v1.4C18,5.9,17.7,6.2,17.4,6.2z M17.4,14.1H0.6c-0.3,0-0.6-0.3-0.6-0.7V12c0-0.4,0.3-0.7,0.6-0.7h16.9c0.3,0,0.6,0.3,0.6,0.7v1.4C18,13.7,17.7,14.1,17.4,14.1z" />
              </svg>
            </span>
            <span class="navbar-toggler-toggled">
              <svg width="14" height="14" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor"
                  d="M11.5,9.5l5-5c0.2-0.2,0.2-0.6-0.1-0.9l-1-1c-0.3-0.3-0.7-0.3-0.9-0.1l-5,5l-5-5C4.3,2.3,3.9,2.4,3.6,2.6l-1,1 C2.4,3.9,2.3,4.3,2.5,4.5l5,5l-5,5c-0.2,0.2-0.2,0.6,0.1,0.9l1,1c0.3,0.3,0.7,0.3,0.9,0.1l5-5l5,5c0.2,0.2,0.6,0.2,0.9-0.1l1-1 c0.3-0.3,0.3-0.7,0.1-0.9L11.5,9.5z" />
              </svg>
            </span>
          </button>
          <!-- End Responsive Toggle Button -->
        </div>
      </div>
    </div>
  </div>
  <!-- End Breadcrumb Section -->

  <!-- Content Section -->
  <div class="container space-1 space-top-lg-0 space-bottom-lg-2 mt-lg-n10">
    <div class="row">
      <div class="col-lg-3">
        <!-- Navbar -->
        <div class="navbar-expand-lg navbar-expand-lg-collapse-block navbar-light">
          <div id="sidebarNav" class="collapse navbar-collapse navbar-vertical">
            <!-- Card -->
            <div class="card mb-5">
              <div class="card-body">
                <!-- Avatar -->
                <div class="d-none d-lg-block text-center mb-5">
                  <div class="avatar avatar-xxl avatar-circle mb-3">
                      <% if (usuario.imagen){ %> 
                        <img id="avatarImg" class="avatar-img" src="/uploads/perfiles/<%=usuario.imagen%>"
                        alt="Image Description">
                        <img class="avatar-status avatar-lg-status" src="../assets/svg/illustrations/top-vendor.svg"
                        alt="Image Description" data-toggle="tooltip" data-placement="top" title="Esta Verificada la cuenta">
                      <% } else {%> 
                        <img id="avatarImg" class="avatar-img" src="../assets/img/160x160/img39.jpg"
                        alt="Image Description">
                        <img class="avatar-status avatar-lg-status" src="../assets/svg/illustrations/top-vendor.svg"
                        alt="Image Description" data-toggle="tooltip" data-placement="top" title="Esta Verificada la cuenta">
                      <% } %>
                  </div>

                  <h4 class="card-title"><%=usuario.nombre%></h4>
                  <p class="card-text font-size-1"><%=usuario.email%></p>
                </div>
                <!-- End Avatar -->

                <!-- Nav -->
                <h6 class="text-cap small">Mi Cuenta</h6>

                <!-- List -->
                <ul class="nav nav-sub nav-sm nav-tabs nav-list-y-2 mb-4">
                  <li class="nav-item">
                    <a class="nav-link active" href="/administracion">
                      <i class="fas fa-id-card nav-icon"></i> Editar Perfil
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/administracion-Meeti">
                      <i class="fas fa-shield-alt nav-icon"></i> Mis Meeti
                      <span class="badge badge-soft-dark badge-pill nav-link-badge">
                        <%= listameeti.length %>
                      </span>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link " href="/administracion-Grupo">
                      <i class="fas fa-bell nav-icon"></i> Mis Grupos
                      <span class="badge badge-soft-dark badge-pill nav-link-badge">
                        <%= listagrupo.length %>
                      </span>
                    </a>
                  </li>
                </ul>
                <!-- End List -->
                <div class="d-lg-none">
                  <div class="dropdown-divider"></div>
                </div>
                <!-- End Nav -->
              </div>
            </div>
            <!-- End Card -->
          </div>
        </div>
        <!-- End Navbar -->
      </div>

      <div class="col-lg-9">
        <!-- Card -->
        <div class="card mb-3 mb-lg-5">
          <div class="card-header">
            <h5 class="card-title">Informacion de la cuenta</h5>
          </div>
          <% if(locals.mensajes) { %>
            <% const categoria=Object.keys(locals.mensajes) %>
              <% if (categoria.length) { %>
                <% locals.mensajes[categoria].forEach(alerta=>{ %>
                  <div class="alert alert-soft-<%- categoria %> text-center rounded-0 mb-0" role="alert">
                    <strong>
                      <%= alerta %>
                    </strong>
                  </div>
                  <% }) %>
                    <% } %>
                      <% } %>

          <!-- Body -->
          <div class="card-body">
            <form action="/editar-perfil" method="POST" enctype="multipart/form-data">
              <!-- Form Group -->
              <div class="row form-group">
                <label class="col-sm-3 col-form-label input-label">Foto de Perfil</label>

                <div class="col-sm-9">
                  <div class="media align-items-center">
                    <label class="avatar avatar-xl avatar-circle mr-4" for="avatarUploader">
                      <% if (usuario.imagen){ %> 
                        <img id="avatarImg" class="avatar-img" src="/uploads/perfiles/<%=usuario.imagen%>"
                        alt="Image Description">
                      <% } else {%> 
                        <img id="avatarImg" class="avatar-img" src="./assets/img/160x160/img39.jpg"
                        alt="Image Description">
                      <% } %>
                     
                    </label>

                    <div class="media-body">
                      <div class="btn btn-sm btn-primary file-attachment-btn mb-2 mb-sm-0 mr-2">Subir una foto
                        <input type="file" name="imagen" class="js-file-attach file-attachment-btn-label" id="avatarUploader" 
                        data-hs-file-attach-options='{
                          "textTarget": "[for=\"customFile\"]"
                       }'>
                      </div>

                      <a class="btn btn-sm btn-soft-secondary mb-2 mb-sm-0" href="/cambiar-password/<%= usuario.id %>" data-toggle="modal" data-target="#exampleModalCenter<%= usuario.id %>">Cambiar contraseña</a>
                    </div>
                  </div>
                </div>
              </div>
              <!-- End Form Group -->
              <!-- Form Group -->
              <div class="row form-group">
                <label for="firstNameLabel" class="col-sm-3 col-form-label input-label">Nombre Completos <i
                    class="far fa-question-circle text-body ml-1" data-toggle="tooltip" data-placement="top"
                    title="Escribir nombres Completos."></i></label>

                <div class="col-sm-9">
                  <div class="input-group">
                    <input type="text" class="form-control" name="nombre" id="firstNameLabel"
                      placeholder="Escribir dos nombres y dos apellidos" value="<%= usuario.nombre %>">
                  </div>
                </div>
              </div>
              <!-- End Form Group -->

              <!-- Form Group -->
              <div class="row form-group">
                <label for="emailLabel" class="col-sm-3 col-form-label input-label">Correo Electrónico</label>

                <div class="col-sm-9">
                  <input type="email" class="form-control" name="email" id="emailLabel"
                    placeholder="ejemplo@ejemplo.com" value="<%= usuario.email %>">
                </div>
              </div>
              <!-- End Form Group -->

              <!-- Form Group -->
              <!--  <div class="js-add-field row form-group"
                     data-hs-add-field-options='{
                        "template": "#addPhoneFieldTemplate",
                        "container": "#addPhoneFieldContainer",
                        "defaultCreated": 0
                      }'>
                  <label for="phoneLabel" class="col-sm-3 col-form-label input-label">Celular <span class="input-label-secondary">(Optional)</span></label>

                  <div class="col-sm-9">
                    <div class="input-group align-items-center">
                      <input type="text" class="js-masked-input form-control" name="phone" id="phoneLabel" placeholder="+x(xxx)xxx-xx-xx" aria-label="+x(xxx)xxx-xx-xx" value="+1(605)5618929"
                             data-hs-mask-options='{
                               "template": "+0(000)000-00-00"
                             }'>
                    </div>

                  </div>
                </div> -->
              <!-- End Form Group -->

              <!-- Add Phone Input Field -->
              <!-- <div id="addPhoneFieldTemplate" style="display: none;">
                  <div class="input-group input-group-add-field">
                    <input type="text" class="js-masked-input form-control" data-name="additionlPhone" placeholder="+x(xxx)xxx-xx-xx" aria-label="+x(xxx)xxx-xx-xx"
                           data-hs-mask-options='{
                             "template": "+0(000)000-00-00"
                           }'>
                  </div>
                </div> -->
              <!-- End Add Phone Input Field -->

              <!-- Form Group -->
              <!--  <div class="row form-group">
                  <label class="col-sm-3 col-form-label input-label">Generacion</label>

                  <div class="col-sm-9">
                    <div class="input-group input-group-md-down-break">
                     
                      <div class="form-control">
                        <div class="custom-control custom-radio">
                          <input type="radio" class="custom-control-input" name="genderTypeRadio" id="genderTypeRadio1">
                          <label class="custom-control-label" for="genderTypeRadio1">Masculino</label>
                        </div>
                      </div>
                      

                     
                      <div class="form-control">
                        <div class="custom-control custom-radio">
                          <input type="radio" class="custom-control-input" name="genderTypeRadio" id="genderTypeRadio2" checked>
                          <label class="custom-control-label" for="genderTypeRadio2">Femenino</label>
                        </div>
                      </div>
                      
                    </div>
                  </div>
                </div> -->
              <!-- End Form Group -->

              <!-- Form Group -->
              <div class="row form-group">
                <label class="col-sm-3 col-form-label input-label">Quien soy</label>

                <div class="col-sm-9">
                  <!-- Quill -->
                  <div class="quill-custom">
                    <input type="hidden" id="x" name="descripcion" value="<%= usuario.descripcion %>">
                    <trix-editor input="x" style="min-height: 20rem!important;"></trix-editor>
                  </div>
                  <!-- End Quill -->
                </div>
              </div>
              <!-- End Form Group -->

              <!-- Footer -->
              <div class="card-footer d-flex justify-content-end">
                <span class="mx-2"></span>
                <input type="submit" class="btn btn-primary" value="Actualizar Perfil">
              </div>
              <!-- End Footer -->

            </form>
            <div id="exampleModalCenter<%= usuario.id %>" data-backdrop="static" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Cambiar contraseña</h5>
                    <button type="button" class="btn btn-xs btn-icon btn-soft-secondary" data-dismiss="modal" aria-label="Close">
                      <svg aria-hidden="true" width="10" height="10" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg">
                        <path fill="currentColor" d="M11.5,9.5l5-5c0.2-0.2,0.2-0.6-0.1-0.9l-1-1c-0.3-0.3-0.7-0.3-0.9-0.1l-5,5l-5-5C4.3,2.3,3.9,2.4,3.6,2.6l-1,1 C2.4,3.9,2.3,4.3,2.5,4.5l5,5l-5,5c-0.2,0.2-0.2,0.6,0.1,0.9l1,1c0.3,0.3,0.7,0.3,0.9,0.1l5-5l5,5c0.2,0.2,0.6,0.2,0.9-0.1l1-1 c0.3-0.3,0.3-0.7,0.1-0.9L11.5,9.5z"/>
                      </svg>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form action="/cambiar-password" method="POST" >
                      <!-- Form Group -->
                      <div class="row form-group">
                        <label for="firstNameLabel" class="col-sm-3 col-form-label input-label">Contraseña Anterior</label>

                        <div class="col-sm-9">
                          <div class="input-group">
                            <input type="password" class="form-control" name="anterior" id="firstNameLabel"
                              placeholder="Escribir contraseña actual" >
                          </div>
                        </div>
                      </div>
                      <!-- End Form Group -->

                       <!-- Form Group -->
                       <div class="row form-group">
                        <label for="firstNameLabel" class="col-sm-3 col-form-label input-label">Nueva Contraseña</label>

                        <div class="col-sm-9">
                          <div class="input-group">
                            <input type="password" class="form-control" name="nuevo" id="firstNameLabel"
                              placeholder="Escribir contraseña nueva" >
                          </div>
                        </div>
                      </div>
                      <!-- End Form Group -->

                      <div class="modal-footer">
                        <button type="button" class="btn btn-white"
                          data-dismiss="modal">Cancelar</button>
                        <input type="submit" class="btn btn-success" value="Actualizar Contraseña">
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- End Body -->
        </div>
        <!-- End Card -->
      </div>
    </div>
    <!-- End Row -->
  </div>
  <!-- End Content Section -->
</main>
<!-- ========== END MAIN ========== -->